#! /bin/bash

ln -fs /usr/share/zoneinfo/Asia/Jakarta /etc/localtime

apt-get update -y 

apt-get update 

apt-get update --allow-releaseinfo-change && apt-get upgrade -y && apt-get update

apt-get install -y tasksel

tasksel install xubuntu-core 

apt-get install -y xrdp ssl-cert tigervnc-standalone-server tigervnc-common

systemctl set-default graphical.target

apt-get install -y wget curl htop jq python3 python3-pip python3-dev build-essential libssl-dev libffi-dev python3-setuptools xvfb

wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb

dpkg -i google-chrome*.deb

apt-get install -y -f

pip3 install requests selenium webdriver-manager undetected-chromedriver pyvirtualdisplay

systemctl reboot

reboot

