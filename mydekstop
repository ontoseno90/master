#!/bin/bash

#NOTE this setting only for elementaryOS 6.1 and run installer only username root
#Kernel 5.11.43
sudo ln -fs /usr/share/zoneinfo/Asia/Jakarta /etc/localtime
sudo apt-get update
sudo apt-get upgrade -y
sudo apt-get install -y wget curl htop git jq
sudo apt-get install -y python3-dev python3-setuptools python3-openssl build-essential minicom screen software-properties-common
sudo curl -fsSL https://deb.nodesource.com/setup_16.x | bash -
sudo wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main"
sudo add-apt-repository ppa:ubuntuhandbook1/app
sudo apt-get update
sudo dpkg -i google-chrome*.deb
sudo apt-get install -y -f
sudo rm -rf google-chrome*.deb
sudo apt-get install -y code nodejs libreoffice
sudo apt-get install -y audacious audacious-plugins vlc
sudo apt-get install -y gammu gammu-smsd libgammu-dev libgammu8 libgammu-i18n
pip install python-gammu selenium undetected-chromedriver requests requests[socks] pyserial
